{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "standard",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "id-length": [
      "error",
      { "exceptions": ["i", "j", "k", "t", "x", "y", "_"] }
    ],
    "no-console": "error",
    "no-magic-numbers": [
      "error",
      {
        "ignore": [0, 1, 16],
        "ignoreArrayIndexes": true
      }
    ],
    "no-plusplus": "error",
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id",
          "_xl"
        ]
      }
    ]
  }
}
